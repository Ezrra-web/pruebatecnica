@{
    ViewData["Title"] = "Nuevo Registro";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Nuevo Registro</h2>

    <form asp-action="Crear" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Nombre</label>
            <input name="nombre" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Contrato</label>
            <input name="contrato" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Saldo</label>
            <input type="number" step="0.01" name="saldo" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha</label>
            <input type="date" name="fecha" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Teléfono</label>
            <input name="telefono" class="form-control" required />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">💾 Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">↩️ Volver</a>
        </div>
    </form>
</div>
